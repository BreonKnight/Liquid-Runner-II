(local player {:x 20 :y 20
															:w 8 :h 16
															:spr 256})
															
(local flags {:wall 0 :ladder 1 :water 2})

(fn inside  [{: x : y} flag]
	(fget (mget (// x 8) (// y 8)) flag))

(fn _G.TIC []
	(let [{: x : y} player]
		(when (btn 2) 
			(set player.x (+ player.x -1)))
		(when (btn 3) 
	 	(set player.x (+ player.x +1)))
		(when (btn 0) 
		 (set player.y (+ player.y -1)))
		(when (btn 1) 
			(set player.y (+ player.y +1)))
		(when (inside player flags.wall)
		 (set player.x x)
		 (set player.y y)
			))
  (map)
		(spr player.spr player.x player.y 0
																		1	0 0 1 2))

